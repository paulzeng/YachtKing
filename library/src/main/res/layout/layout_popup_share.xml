<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#fff"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_share_friends"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/click_bg"
        android:clickable="true"
        android:padding="9dp"
        android:src="@drawable/weichat_friendes" />

    <ImageView
        android:id="@+id/iv_share_weichat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/click_bg"
        android:clickable="true"
        android:padding="13dp"
        android:src="@drawable/weichat" />

    <ImageView
        android:id="@+id/iv_share_qq"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/click_bg"
        android:clickable="true"
        android:padding="10dp"
        android:visibility="gone"
        android:src="@drawable/qq" />

    <ImageView
        android:id="@+id/iv_share_weibo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/click_bg"
        android:clickable="true"
        android:padding="10dp"
        android:visibility="gone"
        android:src="@drawable/weibo" />

    <ImageView
        android:id="@+id/iv_share_url"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/click_bg"
        android:clickable="true"
        android:padding="10dp"
        android:visibility="gone"
        android:src="@drawable/url" />
</LinearLayout>