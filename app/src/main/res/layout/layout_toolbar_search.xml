<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_height" >

    <ImageView
        android:id="@+id/iv_toolbar_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/click_bg"
        android:clickable="true"
        android:padding="8dp"
        android:src="@drawable/ic_toolbar_message" />


    <ImageView
        android:id="@+id/iv_toolbar_right_r"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/click_bg"
        android:clickable="true"
        android:padding="8dp"
        android:src="@drawable/ic_toolbar_add" />

    <RelativeLayout
        android:layout_toLeftOf="@+id/iv_toolbar_right_r"
        android:layout_toRightOf="@+id/iv_toolbar_left"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_search_white">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:paddingLeft="8dp"
            android:layout_centerVertical="true"
            android:src="@drawable/search"/>
    </RelativeLayout>
</RelativeLayout>
